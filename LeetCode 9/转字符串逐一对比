class Solution {
public:
    bool isPalindrome(int x) {
       int l[50000];
       int a,i;
       if(x<0)                //负数必然不对称
       return false;
       for(i=0;x>0;i++)        //整形转换为字符
    
       {
           l[i]=x%10;
           x=x/10;
       }
       int q=0,p=i-1;
       while(q<p)
       {
           if(l[q]!=l[p])
           {
               return false;
           }
           q++;
           p--;
       }
       return true;
    }
};
